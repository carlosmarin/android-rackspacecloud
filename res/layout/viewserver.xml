<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

<!-- 
Name
Flavor (256 Server)
Image (Ubuntu)
Memory
Disk
Status

Public IP Addresses

Private IP Addresses

Actions
-Reset Password
-Resize Server
-Delete Server

Soft Reboot / Hard Reboot
 -->

<!-- Server Name -->
<TextView  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:layout_marginLeft="22dip" 
    android:text="Server Name"
    />
<TextView android:id="@+id/view_server_name"
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:layout_marginLeft="22dip"
    android:layout_marginRight="30dip"
    android:scrollHorizontally="true"
    android:gravity="fill_horizontal"
    android:textStyle="bold"
    android:textSize="20.0sp"
    android:textColor="#fff"
    />
    
<!-- Operating System -->
<TextView  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:layout_marginLeft="22dip" 
    android:text="Operating System"
    />
<TextView android:id="@+id/view_server_os"
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:layout_marginLeft="22dip"
    android:layout_marginRight="30dip"
    android:scrollHorizontally="true"
    android:gravity="fill_horizontal"
    android:textStyle="bold"
    android:textSize="20.0sp"
    android:textColor="#fff"
    />

<!-- Memory -->
<TextView  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:layout_marginLeft="22dip" 
    android:text="Memory"
    />
<TextView android:id="@+id/view_server_memory"
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:layout_marginLeft="22dip"
    android:layout_marginRight="30dip"
    android:scrollHorizontally="true"
    android:gravity="fill_horizontal"
    android:textStyle="bold"
    android:textSize="20.0sp"
    android:textColor="#fff"
    />

<!-- Disk -->
<TextView  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:layout_marginLeft="22dip" 
    android:text="Disk"
    />
<TextView android:id="@+id/view_server_disk"
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:layout_marginLeft="22dip"
    android:layout_marginRight="30dip"
    android:scrollHorizontally="true"
    android:gravity="fill_horizontal"
    android:textStyle="bold"
    android:textSize="20.0sp"
    android:textColor="#fff"
    />

<!-- Status -->
<TextView  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:layout_marginLeft="22dip" 
    android:text="Status"
    />
<TextView android:id="@+id/view_server_status"
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:layout_marginLeft="22dip"
    android:layout_marginRight="30dip"
    android:scrollHorizontally="true"
    android:gravity="fill_horizontal"
    android:textStyle="bold"
    android:textSize="20.0sp"
    android:textColor="#fff"
    />
    
    
    
<Button xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_server_soft_reboot_button"
    android:text="Soft Reboot"
    android:layout_width="100dip"
    android:layout_height="wrap_content"
    android:layout_gravity="left"
    android:layout_marginLeft="20dip"
    android:layout_marginTop="10dip"
    />

<ProgressBar android:id="@+id/save_server_progress_bar" 
    android:layout_width="30dip" 
    android:layout_height="30dip"
    android:layout_marginLeft="130dip"
    android:layout_marginTop="-42dip"
    android:visibility="invisible"
    />
    
<TextView android:id="@+id/saving_server_label"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:layout_marginLeft="172dip"
    android:layout_marginTop="-28dip"
    android:visibility="invisible"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:text="Saving..."
    />

<ImageView
    android:id="@+id/view_server_os_logo"
    android:layout_width="700dip"
    android:layout_height="700dip"
    android:layout_marginTop="-300dip"
    android:adjustViewBounds="true"
    android:layout_gravity="left"
    android:src="@drawable/ubuntu_large"
    />

</LinearLayout>

